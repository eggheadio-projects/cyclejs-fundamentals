{
  "repository": "git@github.com:eggheadio-projects/cyclejs-fundamentals.git",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "aux() { cd $(ls -d packages/*\"$1\"*) && yarn start; }; aux",
    "clean": "rm -rf packages/*/{dist,.cache}",
    "clean:node_modules": "find . -name node_modules -delete",
    "format": "prettier **/*.{js,json,ts} -l --write --ignore-path .gitignore || :",
    "latest": "yarn upgrade-interactive --latest"
  },
  "devDependencies": {
    "prettier": "^1.14.3"
  },
  "private": true
}
